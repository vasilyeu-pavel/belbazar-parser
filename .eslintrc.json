{
    "env": {
        "commonjs": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "no-console": "off",
        "camelcase": "off",
        "no-plusplus": "off",
        "no-param-reassign": "off",
        "no-return-await": "off",
        "no-restricted-syntax":  "off",
        "no-await-in-loop": "off",
        "consistent-return": "off",
        "no-loop-func": "off"
    },
    "globals": {
        "document": "readonly",
        "window": "readonly"
    }
}
